

<body>
  <!-- navigation bar -->

  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Imogene Theatre</a>
        <ul class="nav navbar-nav">
          <li><a href="/events">Upcoming Events</a></li>
          <li class="active"><a href="/buy">Buy Tickets</a></li>
          <li><a href="/admin">Admin</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class='container'>
    <form id="order_tickets" action="/selection/{{events.id}}/checkout" accept-charset="UTF-8" method="post">
      <div class='row'>
        <div id="select_ticket_quantity" class='span12'>
          <div class="event-wrapper">
            <div class="row">
              <div class="col-xs-12">
                
                {{events.title}} <br>
                {{events.day}}{{events.daytime}}

                <div class="separator clear"></div>
              </div>
            </div>
            
            <div class="row">
              <div class="col-xs-12">
                <table class="buy_table table table-condensed">
                  <tr>
                    <th class='select_tix'>Quantity</th>
                    <th class='select_tix'>Price</th>
                    <th class='select_tix'>Type</th>
                  </tr>
          
                  {{#each events.levels}}
                  <tr itemprop="offers">
                    <td class='select_tix'>
                      
                      <input type="number" name="quantity{{@index}}" value="0" size="1" class="ticket-type" min="0" max="99"tabindex="1" required="true"/>
                    </td>
                    <td class='select_tix'>
                      <span itemprop='price'>${{price}}</span>
                    </td>
                    <td class='select_tix'>
                      <div class='tixname'>
                          <div itemprop='name' id='tixname_tickets_1352855'>{{description}}</div>
                      </div>
                    </td>
                  </tr>
                  {{/each}}
                  
                 
                </table>
              </div>
            </div>
          </div>
          
          <input type="hidden" name="performance_id" id="performance_id" value="{{events.id}}" />
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-12'>
          <p class='instruction warn indent'>If your order requires payment, please have your credit card available before clicking Checkout.</p>
          
          
          
          <p>
            <input type="submit" name="commit" id="continue_reserved_seating" tabindex="10" value="Checkout" class="btn btn-primary col-xs-12 col-sm-3 col-md-3" />
          </p>
        </div>
      </div>
    </form>
  </div>
</body>                  
                 

